---
const { tags } = Astro.props;
---

<ul class="flex flex-wrap gap-x-1">
  {
    tags.map((tag) => (
      <li class="mt-2 w-fit">
        <div class="flex flex-nowrap items-center rounded-full bg-teal-400/10 px-3 py-1 text-xs font-medium leading-5 text-teal-500 gap-x-2">
          {tag.icon && <tag.icon class="h-4 w-4 mr-1" />}
          {tag.name}
        </div>
      </li>
    ))
  }
</ul>
